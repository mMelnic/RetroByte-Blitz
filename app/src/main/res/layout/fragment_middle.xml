<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="490dp"
    android:layout_weight="3"
    android:columnCount="1"
    android:padding="16dp"
    android:rowCount="3"
    android:layout_marginTop="20dp"
    android:background="@drawable/blue_window">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/buttonDailyActivities"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_columnSpan="1"
        android:layout_marginBottom="14dp"
        android:background="@drawable/text_view_nude"
        android:text="@string/category5_name"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonLogic"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:text="@string/category1_name"
        android:background="@drawable/text_view_nude"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonMemory"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:text="@string/category2_name"
        android:background="@drawable/text_view_nude"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonCalculation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/text_view_nude"
        android:text="@string/category3_name"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/buttonKnowledge"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/text_view_nude"
        android:text="@string/category4_name"
        android:textSize="30sp" />
</GridLayout>
