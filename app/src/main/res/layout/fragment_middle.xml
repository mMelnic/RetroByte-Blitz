<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:layout_weight="3"
    android:columnCount="2"
    android:padding="16dp"
    android:layout_marginHorizontal="4dp"
    android:rowCount="5"
    android:layout_marginTop="35dp"
    android:background="@drawable/blue_window">

    <!-- First Row -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="8dp"
        android:layout_row="0"
        android:layout_column="0"
        app:srcCompat="@drawable/folder_icon"/>

    <Button
        android:id="@+id/buttonDailyActivities"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_columnWeight="1"
        android:layout_gravity="start"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/text_view_nude"
        android:text="@string/category5_name"
        android:textSize="22sp" />

    <!-- Second Row -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@drawable/folder_icon"/>
    <Button
        android:id="@+id/buttonLogic"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:layout_columnWeight="1"
        android:background="@drawable/text_view_nude"
        android:text="@string/category1_name"
        android:textSize="23sp"
        android:layout_gravity="start" />

    <!-- Third Row -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_row="2"
        android:layout_column="0"
        app:srcCompat="@drawable/folder_icon"/>
    <Button
        android:id="@+id/buttonMemory"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:layout_columnWeight="1"
        android:background="@drawable/text_view_nude"
        android:text="@string/category2_name"
        android:textSize="23sp"
        android:layout_gravity="start" />

    <!-- Fourth Row -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_row="3"
        android:layout_column="0"
        app:srcCompat="@drawable/folder_icon"/>
    <Button
        android:id="@+id/buttonCalculation"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:layout_columnWeight="1"
        android:background="@drawable/text_view_nude"
        android:text="@string/category3_name"
        android:textSize="23sp"
        android:layout_gravity="start" />

    <!-- Fifth Row -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_row="4"
        android:layout_column="0"
        app:srcCompat="@drawable/folder_icon"/>
    <Button
        android:id="@+id/buttonKnowledge"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginBottom="14dp"
        android:layout_columnWeight="1"
        android:background="@drawable/text_view_nude"
        android:text="@string/category4_name"
        android:textSize="23sp"
        android:layout_gravity="start" />

</GridLayout>
