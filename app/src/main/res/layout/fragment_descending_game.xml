<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/empty_empty_window"
    android:padding="10dp">

    <!-- The 2x4 grid -->
    <GridLayout
        android:id="@+id/gridBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_gravity="center">

        <!-- Image views for characters on the grid -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

    </GridLayout>

    <!-- The container where user input is displayed -->
    <LinearLayout
        android:id="@+id/userAnswerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/answerView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/answerView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/answerView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <!-- Image buttons for character selection -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/pilotButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/pilot"
            android:layout_marginEnd="16dp"
            android:contentDescription="Pilot"
            android:background="@color/dark_beige"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/doctorButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/doctor"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_beige"
            android:contentDescription="Doctor"/>

        <ImageButton
            android:id="@+id/engineerButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/engineer"
            android:scaleType="centerCrop"
            android:background="@color/dark_beige"
            android:contentDescription="Engineer"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
</LinearLayout>
